<Window x:Class="ConfigMgr_OSDFrontEnd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigMgr_OSDFrontEnd"
        mc:Ignorable="d"
        Title="OSD Front End"  Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="RunningAppsItemTemplate">
                <Button Content="{Binding Path=PidAndName}" Width="150" />
            </DataTemplate>
        </Grid.Resources>
        <ListView x:Name="ListView" Margin="10" ItemTemplate="{StaticResource RunningAppsItemTemplate}"/>
    </Grid>
</Window>